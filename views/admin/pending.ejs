<% include ../partials/header %>
<br><br>
<div class="container-fluid">
    <div class="row">
        <div class="col"></div>

        <div class="col">
            <ul class="nav nav-pills">
                <li class="nav-item">
                    <a class="nav-link" href="/admin">Published</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="/admin/pending">Pending</a>
                </li>
            </ul>
            <br>
            <table class="table">
                <thead>
                    <tr>
                    <th scope="col">#</th>
                    <th scope="col">ISBN</th>
                    <th scope="col">Title</th>
                    <th scope="col">Author</th>
                    <th scope="col">Category</th>
                    <th scope="col">Price</th>
                    <th scope="col">Seller</th>
                    <th scope="col">Image</th>
                    <th>View</th>
                    <th>Delete</th>
                    <th></th>
                    </tr>
                </thead>
                <tbody>
                <% let count = 0 %>
                <% books.forEach((book) => { %>
                <% count++ %>
                     <tr>
                        <th scope="row"><%= count %></th>
                        <td><%= book.isbn %></td>
                        <td><%= book.title %></td>
                        <td><%= book.author_name %></td>
                        <td><%= book.category %></td>
                        <td><%= book.price %></td>
                        <td><%= book.seller_firstname %></td>
                        <td>
                            <img src="<%= book.book_imageURL %>" style="height:10%;width:100%;">
                        </td>
                        <td><a href="/products/<%= book.id %>/view">View</a></td>
                        <td>
                            <form method="POST" action="/admin/<%= book.id %>/delete?_method=DELETE">
                                <input type="hidden" name="_method" value="DELETE">
                                <button type="Submit">Delete</button>
                            </form>
                        </td>

                        <td>
                            <form method="POST" action="/admin/<%= book.id %>/published?_method=PUT">
                                <input type="hidden" name="_method" value="PUT">
                                <button type="Submit">Publish</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
                </tbody>
        </table>
        <div class="no-book-found">
                No Pending Book(s) Found.
            </div>
        </div>

        <div class="col"></div>
    </div>
</div>

<% include ../partials/footer %>